UPDATER_CONFIG=/etc/updater/auto.lua # Automatic updater configuration file
OPKG=/bin/opkg-cl # Path to opkg

ARGS=""
EXC=0

OPERATION="n"
while [ "$1" ]; do
	case "$1" in
		install)
			OPERATION="i"
			break
			;;
		remove)
			OPERATION="r"
			break
			;;
		upgrade)
			echo "Using opkg for upgrading is discouraged! Use updater.sh instead."
			echo "Press CTRL+C to abort, return to continue anyway."
			read
			;;
		*)
			ARGS="$ARGS $1"
			;;
	esac
	shift
done
shift

if [ "$OPERATION" = "n" ]; then
	# Not install or remove operation
	$OPKG $ARGS $@
	exit $?
fi


PACKAGES=""
while [ "$1" ]; do
	if [ "`echo "$1" | sed 's/^-/+/'`" != "$1" ]; then # ignore options
		ARGS="$ARGS $1"
		shift
		continue
	fi
	PACKAGES="$PACKAGES
	$1"
	shift
done


install() {
	if ! $OPKG $ARGS install "$1"; then
		# opkg failed, probably some problem with package. Lets not change anything
		EXC=255
		return
	fi

	if `echo "$1" | grep -q -E '.*(\.ipk|\.deb)$'`; then
		echo "Warning: Locally installed packages will be removed with the next automatic update!" 1>&2
		return
	fi

	if ! grep -q -e "^Install \"$1\"" "$UPDATER_CONFIG"; then
		# Package wasn't installed
		echo "Install \"$1\"" >>"$UPDATER_CONFIG"
	fi
}

remove() {
	if ! $OPKG $ARGS remove "$1"; then
		# opkg failed. But continue anyway
		EXC=255
	fi

	sed -e "/^Install \"$1\"/d" -i "$UPDATER_CONFIG"
}


# Check if $UPDATER_CONFIG exists. Otherwise create.
if [ ! -f "$UPDATER_CONFIG" ]; then
	echo "-- A file with auto-generated Install commands. Do not edit." > "$UPDATER_CONFIG"
fi

echo "$PACKAGES" | sed '1d' | while read P; do
	case "$OPERATION" in
		i) # Install
			install "$P"
			;;
		r) # Remove
			remove "$P"
			;;
	esac
done
exit $EXC
